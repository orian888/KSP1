        // Add smooth scroll for button clicks
        document.querySelectorAll('.dashboard-button').forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                const href = button.getAttribute('href');
                setTimeout(() => {
                    window.location.href = href;
                }, 300);
